<UserControl x:Name="userControl" x:Class="VectorMaker.ControlsResources.MultiThumbSlider"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:VectorMaker.ControlsResources"
             mc:Ignorable="d" 
             d:DesignHeight="25" d:DesignWidth="200" Height="25" Width="200">
    <Grid>
        <Rectangle Fill="{Binding Background, ElementName=userControl}" Stroke="{StaticResource LightGreyBrush}" StrokeThickness="1" RadiusX="1" RadiusY="1" MouseDown="Rectangle_MouseDown"/>
    </Grid>
</UserControl>
