<UserControl x:Class="VectorMaker.PropertiesPanel.ObjectAlignment"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:VectorMaker.PropertiesPanel"
    xmlns:mahControls="http://metro.mahapps.com/winfx/xaml/controls" xmlns:controls="clr-namespace:VectorMaker.ControlsResources" mc:Ignorable="d" FontSize="13" FontWeight="Light" d:DesignHeight="120" d:DesignWidth="300">
    <UserControl.Resources>
        <Style TargetType="TextBlock">
            <Setter Property="Foreground" Value="{StaticResource LightText}"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="HorizontalAlignment" Value="Right"/>
            <Setter Property="Margin" Value="0,0,3,0"/>
        </Style>
    </UserControl.Resources>
    <Grid>
        <Border BorderThickness="0.4" BorderBrush="#CC5F5F62" Width="{Binding Width, RelativeSource={RelativeSource Self}}" Height="{Binding Height,RelativeSource={RelativeSource Self}}">
            <Grid Background="#FF252525">
                <controls:ButtonWithIcon />
                <!-- <mahControls:NumericUpDown Grid.Column="1" x:Name="TranslationXTextBox" /> -->
                <!-- <TextBlock Text="X" /> -->
            </Grid>
        </Border>
    </Grid>
</UserControl>
